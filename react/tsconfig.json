{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "outDir": "lib",
    "rootDirs": ["test-modules"]
  },
  "include": ["./**/*.js", "./**/*.ts", "./**/*.jsx", "./**/*.tsx"],
  "exclude": ["node_modules", "lib"]
}
